# Environment
NODE_ENV=development

# Server port
PORT=3001

# Frontend URL
FRONTEND_URL=http://localhost:3000

# JWT
JWT_SECRET=your-super-secret-key-please-change-in-production

# JWT Authentication Config
JWT_ACCESS_SECRET=your_secure_access_token_secret_replace_in_production
JWT_REFRESH_SECRET=your_secure_refresh_token_secret_replace_in_production
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Ratelimiting
AUTH_RATE_LIMIT_ATTEMPTS=5
AUTH_RATE_LIMIT_TIME=15m

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/rental_management?schema=public"

# Email Configuration
# Brevo (Sendinblue)
BREVO_API_KEY=your_brevo_api_key
MAIL_FROM=your_email@example.com
MAIL_FROM_NAME=Rental Management System

# File Storage Providers
# Cloudinary
CLOUDINARY_CLOUD_NAME="your_cloud_name"
CLOUDINARY_API_KEY="your_api_key"
CLOUDINARY_API_SECRET="your_api_secret"
CLOUDINARY_URL="cloudinary://your_api_key:your_api_secret@your_cloud_name"

# Cloudinary Configuration
# Mặc định cho chất lượng hình ảnh: auto, low, medium, high
CLOUDINARY_DEFAULT_QUALITY="auto"
# Mặc định cho kích thước hình ảnh thumbnail
CLOUDINARY_THUMBNAIL_WIDTH=300
CLOUDINARY_THUMBNAIL_HEIGHT=300
# Mặc định cho kích thước hình ảnh medium
CLOUDINARY_MEDIUM_WIDTH=800
CLOUDINARY_MEDIUM_HEIGHT=600
# Mặc định cho kích thước hình ảnh large
CLOUDINARY_LARGE_WIDTH=1920
CLOUDINARY_LARGE_HEIGHT=1080 